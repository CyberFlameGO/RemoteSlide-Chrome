{
  "manifest_version": 2,
  "name": "RemoteSlide",
  "description": "Remotely control slides and presentations from your smartphone.",
  "version": "1.0",
  "author": "inventivetalent",
  "homepage_url": "https://remote-sli.de",
  "browser_action": {
    "default_icon": "img/logo-128.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "64": "img/logo-64.png",
    "128": "img/logo-128.png",
    "256": "img/logo-256.png",
    "512": "img/logo-512.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' https://remote-sli.de https://cdnjs.cloudflare.com https://code.jquery.com https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "sessionGrabber.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "lib/socket.io.js",
        "inject/injector.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "lib/*",
    "inject/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://*.remote-sli.de/*"
    ]
  },
  "key": ""
}